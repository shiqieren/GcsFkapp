<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/myhead_h_bg"
                android:background="@mipmap/bg_my"
                android:scaleType="fitXY"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/space_16">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    app:civ_border_width="@dimen/lay_4"
                    android:background="@drawable/head_shape_bg"
                    app:civ_border_color="#80F0F0F0"
                    android:padding="@dimen/lay_12"
                    android:src = "@mipmap/widget_default_face"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/lay_12"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18"
                    android:text="Hi，管云" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background = "@color/darkgrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/defaultTextColor"
                    android:paddingLeft="15dip"
                    android:textSize="@dimen/font_16"
                    android:text="@string/menu_base_info"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background = "@color/darkgrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/defaultTextColor"
                    android:paddingLeft="15dip"
                    android:textSize="@dimen/font_16"
                    android:text="@string/menu_shop_info"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background = "@color/darkgrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/defaultTextColor"
                    android:paddingLeft="15dip"
                    android:textSize="@dimen/font_16"
                    android:text="@string/menu_social_info"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background = "@color/darkgrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/defaultTextColor"
                    android:paddingLeft="15dip"
                    android:textSize="@dimen/font_16"
                    android:text="@string/menu_base_info"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="83dip"
                    android:orientation="horizontal">
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>





    <com.gcs.fengkong.ui.widget.load.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible" />
</FrameLayout>